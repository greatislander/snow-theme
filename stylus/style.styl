/* Colours */
black ?= #0F191D;

@import url('https://fonts.googleapis.com/css?family=Roboto:400,900');

@font-face {
    font-family: "Roboto";
}

primary-font ?= "Roboto", sans-serif;
header-font ?= "Roboto";
header-color ?= #0F191D;
body-background ?= #fff;
corner-flourish-color ?= #fff;
foreground ?= #fff;

/* Masthead colours */
masthead-color ?= #7EC9BC;
masthead-background-hover ?= #7EC9BC;
masthead-border ?= 0.8rem solid #7EC9BC;

main-nav-link-color ?= #0F191D;
main-nav-link-color-hover ?= #0F191D;
main-nav-link-background-hover ?= #7EC9BC;
main-nav-link-focus ?= 0.2rem solid #0F191D;

/* Sidebar */
sidebar-color ?= #DCDE70;
sidebar-background ?= #DCDE70;
sidebar-link-color ?= #0F191D;
sidebar-link-background-hover ?= #0F191D;
sidebar-link-color-hover ?= #0F191D;
sidebar-link-focus ?= 0.2rem solid #0F191D;

/* Front Main Content Area */
front-main-content-link-color ?= #0F191D;

/* Main Content Area for all other pages */
main-content-link-color ?= #385c8a;
main-content-accent ?= #DCDE70;
main-content-background ?= #fff;
main-content-color ?= #0F191D;

/* Front Page Panels */
front-panel-container-background ?= #F7AC82;
front-panel-header ?= #DCDE70;
front-panel-text ?= #0F191D;

/* Skip Links */
skip-color ?= #7EC9BC;
skip-background ?= #fff;
skip-focus-outer-border ?= #7EC9BC;
skip-focus-inner-border ?= #fff;
skip-hover-color ?= #0F191D;
skip-hover-background ?= #7EC9BC;

/* Front Page Footer */
front-footer-background ?= #7EC9BC;
front-footer-color ?= #fff;
front-footer-link-color ?= #fff;
front-footer-link-hover-background ?= #fff;
front-footer-link-hover ?= #006274;
front-footer-link-focus ?= 0.2rem solid #fff;

/* Sub Page Footer */
footer-background ?= #7EC9BC;
footer-color ?= #0F191D;
footer-link-color ?= #0F191D;
footer-link-hover-background ?= #0F191D;
footer-link-hover ?= #fff;
footer-link-focus ?= 0.2rem solid #0F191D;

/* Site description */
site-tagline-color ?= #fff;
site-tagline-emphasis ?= #F7AC82;
site-tagline-background-image ?= "./images/banner-COLOUR.jpg";

/* Mixins */
apply-contrast-sidebar-images(foreground fileSuffix) {
    .a11y-site-aside {
        background-image: none;
    }

    .a11y-site-footer {
        border-top: none;
        background-image: none;
    }
}

apply-contrast-tagline-background(fileSuffix) {
    .a11y-site-tagline {
        background: url("./images/banner-"+fileSuffix+".jpg");
        background-position: 9rem -5rem;
        background-size: 82% auto;
        background-repeat: no-repeat;
        padding: 3rem 15rem 3rem 15rem;
        min-height: 25rem;
    }
}

apply-contrast-colours(foreground background fileSuffix) {
    #corner-flourish {
        fill: foreground;
        background-color: initial !important;
    }

    #ontario-logo {
        fill: foreground;
    }

    a:hover {
        color: background !important;
        background-color: foreground !important;
    }

    a:focus {
        outline: 0.2rem solid foreground !important;
    }

    .a11y-site {
        border: 0.2rem solid foreground;
    }

    .a11y-site-header {
        border-bottom: none;
    }

    .a11y-site-tagline {
        text-shadow: none;
        background: none;
    }

    .a11y-site-tagline h1 {
        background: none !important;
    }

    .a11y-panel-container {
        background: none !important;
    }

    .a11y-front-panel {
        border-bottom-color: background !important;
        border-top-color: background !important;
        border-left-color: background !important;
        border-right-color: background !important;
    }

    .a11y-site-aside {
        border-top: 1.6rem solid background !important;
    }

    .a11y-site-title {
        a {
            background-image: url("./images/logo-"+fileSuffix+".png");
        }
    }

    .a11y-main-nav-items {
        li.current-menu-item:before {
            border-top: 0.6rem solid foreground;
        }
    }

    .a11y-site-footer {
        border-top: none;
        p {
            background: none !important;
        }
    }
}

/* Styles for specific SVG images. */
#corner-flourish {
    display: none;
}

#ontario-logo {
    display: none;
}

/* General styles */
.a11y-theme {
    display: block;
    font-family: primary-font;
    background-color: body-background;

    h1, h2, h3 {
        font-family: header-font;
        color: header-color;
        text-transform: capitalize;
        font-weight: bold;
    }

    a {
        text-decoration: underline;
        color: main-content-link-color;
    }
}

.a11y-site-header {
    padding: 0;
    margin-top: 0;
}

.dropdown {
    padding: 0;
}

/* Skip links */
#skip {
    float: left;
    height: 0rem;
}

#skip a {
    color: skip-color;
    background: skip-background;
    margin-top: 1rem;

    &, &:hover, &:visited {
        height: 1px;
        left: -10000px;
        overflow: hidden;
        position: absolute;
        top: auto;
        width: 1px;
        color: skip-hover-color;
        background: skip-hover-background;
    }

    &:active, &:focus {
        height: auto;
        width: auto;
        left: auto;
        border: 0.5rem solid skip-focus-inner-border;
        outline: 0.2rem solid skip-focus-outer-border;
        color: skip-hover-color;
        background: skip-hover-background;
        padding: 1rem;
        z-index: 1;
    }
}

/* UI Options. */
.fl-prefsEditor-separatedPanel .fl-panelBar-wideScreen {
    flex-flow: row wrap;
    display: flex;
    justify-content: flex-end;
    background-color: inherit;
    border-bottom: none;

    .fl-prefsEditor-buttons {
        margin-right: 5em;
    }

    button:focus {
        outline: 0.2rem solid #000;
    }

    .fl-prefsEditor-showHide {
        min-width: 7em;
    }
}

/* Site Header */
.a11y-site-header {
    background-color: masthead-background;
    padding: 0;

    .a11y-site-title {
        margin: 0;
        text-transform: none;
    }

    .a11y-site-title a {
        color: masthead-color;
        display:flex;
        align-items:flex-end;

        background: url("./images/logo-COLOUR.png") -0.1rem/10.5rem 4rem no-repeat;
        background-size: 15rem 6rem;
        width: 15rem;
        height: 5rem;

        &:hover {
            background-color: masthead-background-hover;
            color: masthead-color-hover;
        }

        &:focus {
            outline: main-nav-link-focus;
        }
    }
}

.a11y-main-nav {

    .title-bar {
        display: inline-block;
        background-color: inherit;
    }

    .menu-icon {
        width: 2.5rem;
        height: 2.5rem;
        display:flex;
        align-items:end;
        margin-top: 1rem;

        &:focus {
            outline: main-nav-link-focus;
        }

        &:before {
            font-size: 1.8rem;
            content: "\2630";
            position: absolute;
            top: -0.4rem;
            left: 0.4rem;
        }

        &:after {
            display:none;
            visibility: hidden;
        }
    }
}

/* Shared navigation styles for all screen sizes. */
.a11y-main-nav-items {

    ul {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;

        a {
            color: main-nav-link-color;
            text-transform: uppercase;
            text-decoration: none;
            font-weight: bold;

            &:hover {
                background-color: main-nav-link-background-hover;
                color: main-nav-link-color-hover;
            }

            &:focus {
                outline: main-nav-link-focus;
            }

        }
    }
}

@media screen and (min-width: 40em) and (max-width: 65.999em) {
    .a11y-main-nav-items {

        width: 100%;

        ul li {
            flex-direction: column;
            justify-content: space-between;
            text-align: left;
            width: 100%;
        }
        
        .menu-item {
            border-right: none;

            &:last-of-type {
                border-right: none;
            }
        }

        .menu li a {
            padding: 0.7rem 0.8rem;
        }
    }
}

/* Navigation for medium screens and larger. */
@media screen and (min-width: 66em) {
    .a11y-main-nav-items {
        
        ul {
            border: 0.07rem solid;
            display: flex;
            width: 100%;
            justify-content: flex-start;
            align-items: stretch;
            align-content: center;
            flex-flow: row wrap;
        }

        a {
            justify-content: center;
            align-content: center;
        }

        ul li {
            margin: 0;
            flex: 1 1;
        }

        .menu-item {
            border-right: none;

            &:last-of-type {
                border-right: none;
            }
        }

        .menu li a {
            text-align: center;
            padding: 1.6rem 2rem;
            width: 100%;
            height: 100%;

        }

        li {
            align-self: auto;
            margin: auto;           
        }

        li.current-menu-item:before {
            border-top: 0.6rem solid main-nav-link-color;
            width: calc(40rem/7);
            margin: 0 2.5rem;
            position: absolute;
            content: "";
        }

    }
}

// Main - Front Page
.home .a11y-site-main {
    background-color: front-main-content-background;
    padding: 0;
    border: 0;
    overflow-x: hidden;
}

.snow-container {
    display: flex;
    flex-direction: row;
    padding: 2rem 2rem 0rem 2rem;
}

.snow-intro {
    position: relative;
    display: flex;
    flex-direction: column;
    padding: 0rem 2rem 2rem 2rem;
}

.snow-home {
    flex: auto;
    padding: 2rem 2rem 2rem 0;
    float: left;
}

.snow-access {
    flex: auto;
    width: 100%;
    border: 1px solid main-content-accent;
    margin: auto;
    padding: 2rem;
    vertical-align: middle;

    .textwidget {
        padding: 1rem;
    }
}

.snow-access-title {
    font-weight: bold;
    text-align: center;
    border-bottom: 1px solid main-content-accent;
    padding-bottom: 0.5rem;
    text-transform: capitalize;
    font-size: 1.2rem;
}

.snow-experiences {
    text-align: center;
    background-color: main-content-accent;
    padding: 1rem 1rem;
    margin: 0;
    position: relative;

}

h2.snow-experiences-title {
    text-transform: uppercase;
    text-align: center;
    color: front-main-content-link-color;
    font-size: 1.3rem;
}

h2.snow-title {
    color: front-main-content-link-color;
    font-weight: bold;
    font-size: 1.5rem;
}

.snow-license   {
    float: left;
}

.snow-contact {
    float: left;
}

.snow-partners {
    float: right;
}


// Main - All other pages.
.category,
.single,
.page {
    main {
        border: none;
        background: main-content-background;
        padding: 1.6rem;

        a {
            text-decoration: underline;
            color: main-content-link-color;
        }

    }

}

/* Site Tagline (appears on front page only) */
.a11y-site-tagline {
    background-color: foreground;
    background-image: url(site-tagline-background-image);
    background-size: cover;
    background-repeat: no-repeat;
    background-position: 0% 0%;
    padding: 1rem 2rem;
    min-height: 15rem;
    display: flex;

    span {
        font-weight: bold;
        text-transform: uppercase;
        text-shadow: none;
        color: site-tagline-color;
        background: rgb(15,25,29);
        background: rgba(15,25,29,.7);
    }
}

.a11y-site-tagline .a11y-tagline-emphasis {
    color: site-tagline-emphasis;
}

/* The Three Panels that appear on the front page. */
.a11y-panel-container {
    padding: 2rem 2rem;
    background-color: front-panel-container-background;


    &.row {
        // override Foundation margins.
        margin-left: 0;
        margin-right: 0;
    }
}

.a11y-front-panel {
    background-color: front-panel-background;
    border: 1rem solid front-panel-container-background;

    color: inherit;

    &:focus, &:hover {
        color: inherit;
        border-color: front-panel-header;
    }

    &.columns {
        padding: 0;
    }

    h2 {
        font-size: 1.2rem;
        text-transform: none;
        padding: 1rem 1.5rem;
        margin: 0;
        color: front-main-content-link-color;
        text-align: center;
        background: front-panel-header;
    }

    section {
        padding: 0.5rem 1.5rem 1.5rem 1.5rem;
    }

    .snow-widget {
        padding: 0.5rem 1.5rem 1.5rem 1.5rem;
    }

    .snow-widget a {
        color: front-panel-text;
        text-decoration: underline;
    }

}

/* Site Sidebar (appears on all other pages, except front page) */
.a11y-site-aside {
    color: sidebar-color;
    font-size: 1.1rem;
    background: sidebar-background;

    ul {
        list-style: none;
        margin: 0;
    }

    .a11y-sidebar-current:before {
        content: "\25B6";
    }

    .a11y-sidebar-current {
        font-weight: bold;
    }

    .a11y-sidebar-category-link {
        text-transform: uppercase;
    }

    a {
        color: sidebar-link-color;
        padding: 0.4rem;
        margin-bottom: 0.2rem;
        text-decoration: none;
        width: 100%;
        display: inline-block;

        &:hover {
            text-decoration: underline;
            color: sidebar-link-color-hover;
        }

        &:focus {
            outline: sidebar-link-focus;
            color: sidebar-link-color;
        }

        &:focus:hover {
            text-decoration: underline;
            color: sidebar-link-color-hover;
        }
    }

    h1, h2, h3 {
        color: sidebar-color;
        font-size: 1.2rem;
    }
}

/* Main Content Area Styles */
.a11y-site-main .snow-access-title {
    font-size: 1.5rem;
    text-transform: capitalize;
}

.a11y-site-main .snow-title {
    font-size: 1.5rem;
}

.a11y-site-main .snow-experiences-title {
    font-size: 1.3rem;
    text-align: center;
    color: main-content-color;
}

.a11y-site-main h1, .a11y-entry-header h1 {
    font-size: 2rem;
    text-transform: uppercase;
    color: main-content-color;
    background-color: none;
}

.a11y-site-main article {
    h1, h2, h3 {
        margin-bottom: 0.8rem;
        margin-top: 2rem;
    }

    h1 {
        font-size: 2rem;
    }

    h2 {
        font-size: 1.6rem;
    }

    h3 {
        font-size: 1.2rem;
    }

    blockquote {
        color: main-content-color;
        border-left: 0.2rem solid #000;
    }
}

.a11y-entry-content h2 {
    color: #000;
    border-bottom: 0.2rem solid #000;
}

.a11y-entry-content h3 {
    color: #000;
}

h1.entry-title {
    margin-top: 0;
}

h3.comment-reply-title {
    color: #000;
}

/* Footer */
.a11y-site-footer {

    display: flex;
    padding: 2rem 2rem;
    background-color: footer-background;
    background-image: none;
    color: footer-color;
    font-size: 0.9rem;

    &.row {
        // override Foundation margins.
        margin-left: 0;
        margin-right: 0;
    }

    a {
        color: footer-link-color;

        &:hover {
            background-color: footer-link-hover-background;
            color: footer-link-hover;
        }

        &:focus {
            outline: footer-link-focus;
            color: footer-link-color; // override Foundation style.
        }
    }

    h2 {
        font-size: 0.9rem;
        color: footer-color;
        padding: 0;
        margin: 0;
    }
}

/* Footer styles for the home page only. */
.home .a11y-site-footer {
    background-color: front-footer-background;

    a {
        &:hover {
            background-color: front-footer-link-hover-background;
            color: front-footer-link-hover;
        }

        &:focus {
            outline: front-footer-link-focus;
        }
    }
}

